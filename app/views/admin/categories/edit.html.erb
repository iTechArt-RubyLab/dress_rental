<div class="container mt-4">
  <h1 class="text-center mb-5 mt-2">Edit this category</h1>
  <%= render "form", category: @category %>

  <br>

  <div>
    <%= link_to "Show this category", @category, class: "btn btn-light" %> |
    <%= link_to "Back to categories", categories_path, class: "btn btn-light" %> |
    <%= link_to 'Destroy', admin_category_path(@category), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  </div>
</div>
