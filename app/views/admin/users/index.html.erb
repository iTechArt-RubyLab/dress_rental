<h1>Users</h1>

<table class='table table-striped'>
  <thead class='thead-dark'>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>Owner</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "Yes" : "No" %></td>
        <td><%= user.owner? ? "Yes" : "No" %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-warning' %></td>
        <td><%= link_to "Destroy", admin_user_path(user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
