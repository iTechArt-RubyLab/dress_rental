<h1>Categories</h1>
<% if current_user&.admin? %>
  <h3><%= link_to 'Create new Category', new_admin_category_path %></h3>
<% end %>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Explore this category", category %>
    </p>
    <% if current_user&.admin? %>
      <p><%= link_to 'Edit',  edit_admin_category_path(category) %> <%= link_to 'Destroy', admin_category_path(category) , data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>
    <% end %>
  <% end %>
</div>

