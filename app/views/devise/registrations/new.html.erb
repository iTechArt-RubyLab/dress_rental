<section class="overflow-hidden">
  <div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center">

      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="<%= asset_path('sign_up-photo.jpeg') %>" alt="Signup image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>

      <div class="col-sm-6 mx-auto text-black">
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mb-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "row g-3"}) do |f| %>
            <h3>Sign up</h3>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="col-12">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", autocomplete: "given-name", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", autocomplete: "family-name", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :phone, class: "form-label" %>
              <%= f.text_field :phone, class: "form-control", autocomplete: "tel" %>
            </div>

            <div class="col-12">
              <%= f.label :address, class: "form-label" %>
              <%= f.text_field :address, class: "form-control", autocomplete: "address-line1" %>
            </div>

            <div class="col-12">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autocomplete: "email", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :password, class: "form-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum, 1 lowecase letter, 1 uppercase letter and 1 digit)</em>
              <% end %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
            </div>

            <div class="col-12 text-center">
              <%= f.submit "Sign up", class: "btn btn-primary btn-lg w-100" %>
            </div>

            <p class="text-center mt-3 mb-0">Already have an account? <%= link_to "Log in", new_user_session_path, class: "link-info" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>