<section class="vh-100 overflow-hidden">
  <div class="container-fluid h-100">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-sm-6 mx-auto text-black align-items-center justify-content-center">
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mb-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <%= f.email_field :email, class: "form-control form-control-lg" %>
              <label class="form-label" >Email address</label>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, class: "form-control form-control-lg" %>
              <label class="form-label" >Password</label>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="pt-1 mb-4 text-center">
                <%= f.check_box :remember_me, class: "form-check-input me-2" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="pt-1 mb-4 text-center">
              <%= f.submit "Login", class: "btn btn-primary btn-lg w-100" %>
            </div>
            <p class="text-center">Don't have an account? <%= link_to "Register here", new_user_registration_path, class: "link-info" %></p>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <p class="text-center"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-info" %></p>
            <% end %>
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <p class="text-center"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-info" %></p>
            <% end %>
        </div>
        <% end %>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= form_for "Login",
                        url: omniauth_authorize_path(resource_name, provider),
                        method: :post,
                        data: {turbo: "false"} do |f| %>
              <%= f.submit "Login", type: "image", :class =>"class1", :style => "height: 50px", src: url_for("/assets/btn_google_signin_web.png") %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="<%= asset_path('login-photo.jpeg') %>"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>