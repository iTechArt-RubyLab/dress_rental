<% flash.each do |key, value| %>
  <div class="alert alert-<%= bootstrap_class_for(key) %> alert-dismissible fade show" role="alert">
    <%= content_tag :div, value, class: "d-flex align-items-center justify-content-center" %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>