<header>
  <div class='top-bar'>
    <nav>
       <ul>
          <li>
            <%= link_to 'Home', root_path %>
          </li>
          <li>
            <%= link_to 'Products', products_path %>
          </li>
          <li>
            <%= link_to 'Categories', categories_path %>
          </li>
          <li>
            <%= link_to 'Salons', salons_path %>
          </li>
          <li>
            <% if current_user && current_user.admin? %><%= link_to 'Rentals',  admin_rentals_path %><% end %>
          </li>
          <li>
           <% if current_user && current_user.admin? %><%= link_to 'Users', admin_users_path %><% end %>
           </li>
          <li>
            <% if !user_signed_in? %><%= link_to 'Sign up', new_user_registration_path %><% end %>
          </li>
          <li>
            <% if current_user %><%= link_to 'Account', user_path(current_user.id) %>
             <%= link_to image_tag(current_user.avatar_url, alt: 'User avatar', class: 'avatar'), user_path(current_user.id) %>
             <% end %>
          </li>

          <li>
            <% if !user_signed_in? %>
              <%= link_to 'Log in', new_user_session_path %>
            <% else %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
            <% end %>
          </li>
        </ul>
    </nav>
</header>
