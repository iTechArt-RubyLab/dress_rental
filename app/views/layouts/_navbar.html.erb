<header>
  <div class='top-bar'>
    <nav>
      <ul>
        <li>
          <%= link_to t('navbar.products'), products_path %>
        </li>
        <li>
          <%= link_to t('navbar.categories'), categories_path %>
        </li>
        <li>
          <%= link_to t('navbar.salons'), salons_path %>
        </li>
        <li>
          <% if current_user&.admin? %><%= link_to t('navbar.rentals'), admin_rentals_path %><% end %>
        </li>
        <li>
          <% if current_user&.admin? %><%= link_to t('navbar.users'), admin_users_path %><% end %>
        </li>
        <li>
          <% if !user_signed_in? %><%= link_to t('navbar.sign_up'), new_user_registration_path %><% end %>
        </li>
        <li>
          <% if current_user %>
            <%= link_to t('navbar.account'), user_path(current_user.id) %>
            <%= link_to image_tag(current_user.avatar_url, alt: 'User avatar', class: 'avatar'), user_path(current_user.id) %>
          <% end %>
        </li>

        <li>
          <% if !user_signed_in? %>
            <%= link_to t('navbar.log_in'), new_user_session_path %>
          <% else %>
            <%= link_to t('navbar.log_out'), destroy_user_session_path, data: { turbo_method: :delete } %>
          <% end %>
        </li>
      </ul>
    </nav>
</header>