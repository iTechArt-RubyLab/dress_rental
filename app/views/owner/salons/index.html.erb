<h1>Owned salons list</h1>
<% current_user.salons.each do |salon| %>
  <p><%= salon.name %></p>
  <% if salon.products.flat_map(&:rentals) %>
    <table class='table table-striped table-hover'>
      <thead class='thead-dark'>
        <tr>
          <th>Product</th>
          <th>Start date</th>
          <th>End date</th>
          <th>User email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% salon.products.flat_map(&:rentals).each do |rental| %>
          <tr>
            <td><%= rental.product.name %></td>
            <td><%= rental.start_date %></td>
            <td><%= rental.end_date %></td>
            <td><%= rental.user.email %></td>
            <td><%= link_to "Rate user", rate_user_rental_path(rental), class: 'btn btn-warning' %></td>
            <td><%= link_to "Edit", edit_owner_rental_path(rental), class: 'btn btn-warning' %></td>
            <td><%= link_to "Destroy", owner_rental_path(rental), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>