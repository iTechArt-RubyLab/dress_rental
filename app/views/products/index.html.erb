<h1>Products</h1>

<div class="card-deck text-center">
  <% @products.each_slice(3) do |products_slice| %>
    <div class="row justify-content-center">
      <% products_slice.each do |product| %>
        <div class="col-md-3">
          <div class="card">
            <%= image_tag product.photo_url(:medium), class: "card-img-top", width: "40", height: "320", style: "object-fit: cover"%>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= number_to_currency(product.price) %></p>
            </div>
            <div class="card-footer">
              <%= link_to "Show this product", product, class: "btn btn-primary" %>
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <%= link_to 'Edit',  edit_admin_product_path(product), class: "btn btn-secondary" %>
                  <%= link_to 'Destroy', admin_product_path(product.id), class: "btn btn-danger",  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
                <% elsif current_user.salons.joins(:products).where("products.id = ?", product.id).exists? %>
                  <%= link_to 'Edit',  edit_owner_product_path(product), class: "btn btn-secondary" %>
                  <%= link_to 'Destroy', owner_product_path(product.id), class: "btn btn-danger",  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<p><%= link_to 'Export rentals statistics', export_csv_rentals_path, class: 'btn btn-primary' %></p>
