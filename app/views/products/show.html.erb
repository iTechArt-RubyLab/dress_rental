<div class="container mt-3">
    <div class="row g-3">
      <div class="col-md-6 border-end">
        <div class="d-flex flex-column justify-content-center">
          <div class="main_image">
             <%= image_tag @product.photo_url(:medium), class: "card-img-top", width: "350"%>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="p-3 right-side">
          <div class="d-flex justify-content-between align-items-center">
            <h3><%= @product.name %></h3>
            <span class="heart"><i class='bx bx-heart'></i></span>
          </div>
          <div class="mt-2 pr-3 content">
            <p><%= @product.description %></p>
          </div>
          <h3><%= @product.price %>$ per day</h3>
          <div class="mt-5">
            <span class="fw-bold">Color</span>
            <div class="colors">
              <ul id="marker">
                <li id="marker-1"></li>
                <li id="marker-2"></li>
                <li id="marker-3"></li>
                <li id="marker-4"></li>
                <li id="marker-5"></li>
              </ul>
            </div>
          </div>
          <div class="buttons d-flex flex-row mt-5 gap-3">
            <%= link_to "Rent Now", new_rental_path, class: "btn btn-primary" %>
            <%= link_to "Back to products", products_path, class: "btn btn-dark" %>
          </div>
        </div>
      </div>
    </div>
</div>