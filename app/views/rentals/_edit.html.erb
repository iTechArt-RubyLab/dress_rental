<div class="container mt-4">
  <h1 class="text-center mb-5 mt-2">Edit this rental</h1>

  <h3><%=@rental.product.name%> from <%= @rental.start_date %> to <%= @rental.end_date %> </h3>

  <%= form_for @rental, class: "needs-validation mb-5", novalidate: true do |f| %>
    <div class="form-group">
      <%= f.label :product_id, "Select a Product" %>
      <%= f.collection_select :product_id, Product.all, :id, :name, {prompt: "Select a Product"}, class: "form-control", required: true %>
      <div class="invalid-feedback">Please select a product.</div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :start_date, "Pick Start Date" %>
        <%= f.date_field :start_date, value: @rental.start_date, min: Date.today, class: "form-control", required: true %>
        <div class="invalid-feedback">Please select a valid start date.</div>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :end_date, "Pick End Date" %>
        <%= f.date_field :end_date, value: @rental.end_date, min: Date.today, class: "form-control", required: true %>
        <div class="invalid-feedback">Please select a valid end date.</div>
      </div>
    </div>

    <%= f.submit "Update Rental", class: "btn btn-primary btn-block mt-5" %>
  <% end %>
</div>