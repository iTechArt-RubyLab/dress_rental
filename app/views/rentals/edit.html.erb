<h1>Edit this rental</h1>

<h3><%=@rental.product.product_name%> from <%= @rental.start_date %> to <%= @rental.end_date %> </h3>

<%=flash[:message]%><br><br>

<%= form_for @rental, :url => url_for(:controller => "rentals", :action => "update") do |f| %>
  <%= f.label :start_date, "Start" %>
  <%= f.date_field :start_date %><br>

  <%= f.label :end_date, "End" %>
  <%= f.date_field :end_date %><br>

  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.hidden_field :product_id, :value => @rental.car.id %>
  <%=f.submit %>
<% end %>

<br><br>
