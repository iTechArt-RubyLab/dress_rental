<h1>Create a New Rental</h1>

<%= render "layouts/flash" %>

<%= form_for @rental do |f| %>
  <%= f.collection_select :product_id, Product.all, :id, :name%><br><br>

  <%= f.label :start_date, "Pick Start dates" %>
  <%= f.date_field :start_date, min: Date.today %><br><br>

  <%= f.label :end_date, "Pick End dates" %>
  <%= f.date_field :end_date, min: Date.today %><br><br>

  <%=f.submit %>
<% end %>