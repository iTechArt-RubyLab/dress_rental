<div class="container mt-4">
  <h1 class="text-center mb-5">Rate your experience with this customer</h1>

  <%= form_for @rental, url: rental_update_user_rating_path(@rental), method: :post, class: "needs-validation", novalidate: true do |f| %>
    <div class="form-group">
      <%= f.label :salon_rating %>
      <%= f.number_field :salon_rating, min: 1, max: 5, class: "form-control", required: true %>
      <div class="invalid-feedback">Please rate your experience with the salon.</div>
    </div>

    <%= f.submit "Rate User", class: "btn btn-primary btn-block mt-5" %>
  <% end %>
</div>
