<%= form_for(@user, url: (current_user.admin? ? admin_user_path(@user) : user_path(@user)), method: :put) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

    <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit 'Update Profile' %>
<% end %>
